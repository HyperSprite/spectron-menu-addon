{
  "compilerOptions": {
    "module": "commonjs",
    "lib": [
      "es2015",
      "dom"
    ],
    "target": "es5",
    "jsx": "react",
    "sourceMap": true,
    "declaration": true,
    "removeComments": true,
    "importHelpers": true,
    "baseUrl": ".",
    "strictNullChecks": true,
    "skipLibCheck": true,
    "outDir": "dist"
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}